<% provide(:title, 'Sign In') %>
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="form-group"><%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email Address " %></div>

  <div class="form-group"><%= f.password_field :password, class: "form-control", placeholder: "Password"  %></div>

  <div class="form-group"><%= f.submit "Sign in", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
