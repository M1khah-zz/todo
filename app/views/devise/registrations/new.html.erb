<% provide(:title, 'Sign Up') %>
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="alert-my"><%= devise_error_messages! %></div>

  <div class="form-group"><%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email address" %></div>

  <div class="form-group"><%= f.password_field :password, class: "form-control", placeholder: "Password"   %></div>

  <div class="form-group"><%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation"   %></div>

  <div class="form-group"><%= f.submit "Sign up", class: "btn btn-primary"  %></div>
<% end %>

<%= render "devise/shared/links" %>
