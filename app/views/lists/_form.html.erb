<%= form_for(@list) do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation"  class="alert alert-danger">
      <p><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</p>

      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :content, class: "form-control", placeholder: "Enter list content..." %>
  </div>

  <div class="actions pull-right">
    <%= link_to 'Close', root_path, class: "btn btn-default" %>
    <%= f.submit "Ok", class: "btn btn-primary" %>
  </div>
<% end %>
